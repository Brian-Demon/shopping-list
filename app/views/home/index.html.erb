<h1>Shopping List</h1>

<div>
  <% if current_user %>
    <div class="container">
      <div class="row">
        <div class="col-6 text-end">
          <h4>LOGGED IN AS: <%= current_user.username %></h4>
        </div>
        <div class="col-2">
          <%= link_to "Logout", logout_path, class: "btn btn-secondary btn-lg" %>
        </div>
      </div>
    </div>
    
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-6 text-end">
          <h4>Try loging in!</h4>
        </div>
        <div class="col-2">
          <%= button_to "Login with Google", "/auth/google_oauth2", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>