<div>
  <% if current_user %>
      <div class="row mt-3">
        <div class="col-10 offset-1 create-list">
          <%= form_with url: lists_path do |form| %>
              <%= form.label :name, "Create New List", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "List name..." %>
              <div class="mt-3">
                <%= form.submit "Create List", class: "btn btn-primary" %>
              </div>
          <% end %>
        </div>
      </div>

      <% if @all_lists.length > 0 %>
        <div class="row pt-4 text-center">
          <div class="col-6 offset-1">
            <%= render "lists/lists", collection: current_user.lists %>
          </div>
          <div class="col-2">
            <%= render "lists/buttons", collection: current_user.lists %>
          </div>
        </div>

        <div class="row pb-4 text-center">
          <div class="col-5">
            <%= render "items/items_table", collection: current_user %>
          </div>
        </div>
      <% end %>
      
  <% else %>
    <div class="call-to-action">
      <div class="row mt-3">
        <div class="col-6 text-end">
          <h4>Try logging in!</h4>
        </div>
        <div class="col-2">
          <%= button_to "Login with Google", "/auth/google_oauth2", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>