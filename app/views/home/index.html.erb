<div>
  <% if current_user %>
      <div class="row mt-3">
        <div class="col-10 offset-1 create-list">
          <%= form_with url: lists_path do |form| %>
              <%= form.label :name, "Create New List", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "List name..." %>
              <div class="mt-3">
                <%= form.submit "Create List", class: "btn btn-primary" %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="row pt-4">
        <div class="col-10 offset-1">
          <%= react_component("lists/ListGroup", { lists: @all_lists, previous_item_data: @previous_item_data, csrf: form_authenticity_token  })%>
        </div>
      </div>
  <% else %>
    <div class="call-to-action">
      <div class="row mt-3">
        <div class="col-6 text-end">
          <h4>Try logging in!</h4>
        </div>
        <div class="col-2">
          <%= button_to "Login with Google", "/auth/google_oauth2", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>